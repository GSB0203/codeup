#include<stdio.h>
int main()
{
    int m;
    scanf("%d", &m);
    
    if(m<=500) m=m*7/10;
    else if(m>500&&m<=1500) m=350+(m-500)*2/5;
    else if(m>1500&&m<=4500) m=750+(m-1500)*15/100;
    else if(m>4500&&m<=10000) m=1200+(m-4500)*5/100;
    else m=1475+(m-10000)*2/100;
    printf("%d", m);
    
}

