#include <stdio.h>
int a[10001];
int n, i, j, temp, flag;
int main() {
    scanf("%d", &n);
    for (i=1; i<=n; i++)
        scanf("%d", &a[i]);

    for(i=0; i<n; i++)
    {
        flag=0;
        for(j=1;j<n;j++)
        {
            if (a[j] > a[j+1])
            {
                temp = a[j];
                a[j] = a[j+1];
                a[j+1] = temp;
                flag+=1;
            }
        }
        if(flag==0) break;
    }

    printf("%d", i);
    return 0;
}
